      <li>
        <filter>
          <thingDefs>
            <li>Steel</li>
          </thingDefs>
        </filter>
        <count>5</count>
      </li>
      <li>
        <filter>
          <thingDefs>
            <li>VBWB</li>
          </thingDefs>
        </filter>
        <count>5</count>
      </li>
    </ingredients>
    <fixedIngredientFilter>
      <thingDefs>
        <li>SmokeleafLeaves</li>
        <li>Steel</li>
        <li>VBWB</li>
      </thingDefs>
    </fixedIngredientFilter>
    <products>
      <VBWB_Vape>5</VBWB_Vape>
    </products>
    <recipeUsers>
      <li>DrugLab</li>
    </recipeUsers>
    <skillRequirements>
      <Intellectual>6</Intellectual>
    </skillRequirements>
